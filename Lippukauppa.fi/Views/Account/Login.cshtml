@using Lippukauppa.fi.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Kirjaudu sisään";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Kirjaudu sisään</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b></b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label">Sähköposti</label>
                        <input asp-for="EmailAddress" class="form-control"/>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Salasana</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Kirjaudu sisään" />
                        <a class="btn btn-outline-secondary" asp-controller="Movies" asp-action="Index">Peruuta</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>