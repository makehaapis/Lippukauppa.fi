@model Artist

@{
    ViewData["Title"] = "Details for Artist";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.Title</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-0" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" readonly/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                <div class="row">
                    @foreach (var eventti in Model.Artists_Events)
                    {
                        <div class="columns text-center">
                            <img class="border-info rounded-0" src="@eventti.Event.ImageURL" style="max-width:150px" />
                            <br />
                            <a asp-controller="Artists" asp-action="Details" asp-route-id="@eventti.Event.Id">@eventti.Event.Name</a>
                        </div>
                    }
                    <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="Id"><i class="bi bi-pen"></i>Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}